{% extends '@DdrGitki/base.html.twig' %}

{% block ddr_gitki_title %} - Users{% endblock ddr_gitki_title %}
{% block ddr_gitki_main_content %}
    <div class="page-header d-flex">
        <h1 class="flex-grow-1">Users</h1>
        <div class="align-items-center">
            <a class="btn btn-lg btn-primary" href="{{ path('ddr_gitki.user.edit', {'id': 'new'}) }}">
                <span class="fas fa-fw fa-plus"></span>
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Real Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.realName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles | join(',') }}</td>
                <td>
                    <a href="{{ path('ddr_gitki.user.edit', {'id': user.id}) }}"><span class="fas fa-fw fa-pen"></span></a>
                    <a href="{{ path('ddr_gitki.user.delete', {'id': user.id}) }}"><span class="fas fa-fw fa-trash"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock ddr_gitki_main_content %}
