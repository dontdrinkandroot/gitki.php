{% extends 'DdrGitkiBaseBundle::scaffold.html.twig' %}
{% block title %} - Login{% endblock %}
{% block body %}
    <div class="container">

        <div class="row">

            <div class="col-lg-3 col-md-2"></div>

            <div class="col-lg-6 col-md-8">

                <div id="login" class="panel panel-default">

                    <div class="panel-heading">
                        <h1 class="panel-title">{{ ddr_gitki_name }} - Login</h1>
                    </div>

                    <div class="panel-body">

                        {% if error %}
                            <div class="alert alert-danger">{{ error }}</div>
                        {% endif %}

                        {% if ddr_gitki_form_login_enabled %}

                            <form action="{{ path('login_check') }}" method="post" role="form" class="form-horizontal">

                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="username">Email:</label>

                                    <div class="col-sm-9">
                                        <input class="form-control" type="text" id="username" name="_username"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="password">Password:</label>

                                    <div class="col-sm-9">
                                        <input class="form-control" type="password" id="password" name="_password"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-9 col-sm-offset-3">
                                        <button class="btn btn-primary" type="submit">Login</button>
                                    </div>
                                </div>

                            </form>

                        {% endif %}

                        {% if hwi_oauth_resource_owners() and ddr_gitki_form_login_enabled %}
                            <hr />
                        {% endif %}

                        <div class="row">
                            {% for owner in hwi_oauth_resource_owners() %}
                                <div class="col-md-3">
                                    <a class="btn btn-default btn-block" href="{{ hwi_oauth_login_url(owner) }}">
                                        <span class="fa fa-fw fa-{{ owner }}"></span>
                                        {{ owner | trans({}, 'HWIOAuthBundle')|capitalize }}
                                    </a>
                                </div>
                            {% endfor %}
                        </div>

                    </div>

                </div>

            </div>

            <div class="col-lg-3 col-md-2"></div>

        </div>

    </div>
{% endblock %}