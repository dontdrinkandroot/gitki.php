{% extends 'DdrGitkiBaseBundle::base.html.twig' %}
{% block container %}
    <div class="page-header">
        <h1>Profile</h1>
    </div>
    <h2>Info</h2>
    <div class="row">
        <div class="col-md-6">
            Username: {{ user.username }}
        </div>
        <div class="col-md-6">
            eMail: {{ user.email }}
        </div>
    </div>
    <h2>Change Password</h2>
    {% if hwi_oauth_resource_owners() %}
        <h2>Accounts</h2>
        <div class="row">
            <div class="col-md-6">
                <h3>Connected</h3>
                {% for owner in hwi_oauth_resource_owners() %}
                    {% if connectedAcounts[owner] is defined %}
                        <a class="btn btn-default pull-right"><i class="fa fa-trash-o"></i></a>
                        <span class="fa fa-fw fa-{{ owner }}"></span>
                        {{ owner | trans({}, 'HWIOAuthBundle')|capitalize }}
                    {% endif %}
                {% endfor %}
            </div>
            <div class="col-md-6">
                <h3>Available</h3>
                {% for owner in hwi_oauth_resource_owners() %}
                    {% if connectedAcounts[owner] is not defined %}
                        <a class="btn btn-default pull-right" href="{{ hwi_oauth_login_url(owner) }}"><i
                                    class="fa fa-plus"></i></a>
                        <span class="fa fa-fw fa-{{ owner }}"></span>
                        {{ owner | trans({}, 'HWIOAuthBundle')|capitalize }}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}