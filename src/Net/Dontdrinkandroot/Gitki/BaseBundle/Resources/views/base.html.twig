<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{{ gitki_wiki_name }}{% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheet %}
        <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"
              media="screen"/>
        <link rel="stylesheet" type="text/css"
              href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css"
              media="screen"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/ddrgitkibase/css/style.css') }}" media="screen"/>
    {% endblock %}
</head>
<body>
<header>
    {% block navbar %}
        <nav class="navbar navbar-fixed-top navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('ddr_gitki_base_homepage') }}">{{ gitki_wiki_name }}</a>
                </div>
                <div class="collapse navbar-collapse navbar-collapse">
                    {% block navbar_left %}
                        <ul class="nav navbar-nav">
                            {% block navbar_left_content %}
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Wiki <b
                                                class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('ddr_gitki_wiki_file', {'path' : '/index.md'}) }}">Index</a>
                                        </li>
                                        <li><a href="{{ path('ddr_gitki_history') }}">History</a></li>
                                    </ul>
                                </li>
                            {% endblock %}
                        </ul>
                    {% endblock %}
                    {% block navbar_form %}
                        {{ include('DdrGitkiBaseBundle::navbar.form.partial.html.twig') }}
                    {% endblock %}
                    {% block navbar_right %}
                        <ul class="nav navbar-nav navbar-right">
                            {% block navbar_right_content %}
                                {{ include('DdrGitkiBaseBundle::navbar.right.partial.html.twig') }}
                            {% endblock %}
                        </ul>
                    {% endblock %}
                </div>
            </div>
        </nav>
    {% endblock %}
</header>
{% block abovecontainer %}
{% endblock %}
<div id="content" class="container">
    {% block container %}{% endblock %}
</div>

{% block javascript %}
    <script type="text/javascript" src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
{% endblock %}

</body>
</html>
