{% extends 'DdrGitkiBaseBundle::base.html.twig' %}
{% block title %} - {{ path }}{% endblock %}
{% block content %}
    {{ include('DdrGitkiBaseBundle:Wiki:breadcrumb.partial.html.twig', {'path' : path}) }}
    <div class="page-header">
        <div class="btn-group pull-right">
            {% if is_granted('ROLE_COMMITER') %}
                <a href="{{ path('ddr_gitki_wiki_file', {'path': path, 'action': 'edit'}) }}" class="btn btn-default"
                   title="Edit">{{ icon('pencil') }}</a>
                <a href="{{ path('ddr_gitki_wiki_file', {'path': path, 'action': 'rename'}) }}" class="btn btn-default"
                   title="Rename">{{ icon('resize-horizontal') }}</a>
                <a href="{{ path('ddr_gitki_wiki_file', {'path': path, 'action': 'delete'}) }}" class="btn btn-default"
                   title="Delete">{{ icon('trash') }}</a>
            {% endif %}
            <a href="{{ path('ddr_gitki_wiki_file', {'path': path, 'action': 'history'}) }}" class="btn btn-default"
               title="History">{{ icon('time') }}</a>
        </div>
        {% if heading %}
            <h1>{{ heading }}</h1>
        {% else %}
            <h1>&nbsp;</h1>
        {% endif %}
    </div>
    <div class="row">
        <div class="markdown-html col-md-9">
            {{ body|raw }}
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}