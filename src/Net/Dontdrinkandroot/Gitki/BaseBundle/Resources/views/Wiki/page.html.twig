{% extends 'DdrGitkiBaseBundle:Wiki:base.html.twig' %}
{% block title %} - {{ document.title }}{% endblock %}
{% block actions %}
    <div class="btn-group pull-right">
        {% if is_granted('ROLE_COMMITER') %}
            <a href="{{ path('ddr_gitki_wiki_file', {'path': path, 'action': 'edit'}) }}" class="btn btn-default btn-xs"
               title="Edit"><span class="fa fa-pencil"></span></a>
            <a href="{{ path('ddr_gitki_wiki_file', {'path': path, 'action': 'rename'}) }}"
               class="btn btn-default btn-xs"
               title="Rename"><span class="fa fa-arrows-h"></span></a>
            <a href="{{ path('ddr_gitki_wiki_file', {'path': path, 'action': 'delete'}) }}"
               class="btn btn-default btn-xs"
               title="Delete"><span class="fa fa-trash-o"></span></a>
        {% endif %}
        <a href="{{ path('ddr_gitki_wiki_file', {'path': path, 'action': 'history'}) }}" class="btn btn-default btn-xs"
           title="History"><span class="fa fa-history"></span></a>
    </div>
{% endblock %}
{% block pageheader %}{% endblock %}
{% block content %}
    <div class="markdown-page">
        <div class="row">
            <div class="col-md-3 col-md-push-9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">TOC</h2>
                    </div>
                    <div class="panel-body">
                        <ul>
                            {% for h2 in document.toc %}
                                <li><a href="#{{ h2.attributes.id }}">{{ h2.text }}</a>
                                    <ul>
                                        {% for h3 in h2.children %}
                                            <li><a href="#{{ h3.attributes.id }}">{{ h3.text }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="markdown-html col-md-9 col-md-pull-3">
                {{ document.html|raw }}
            </div>
        </div>
    </div>
{% endblock %}